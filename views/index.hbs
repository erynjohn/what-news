{{> hero }}
<div class="space-around-content">

{{#each dbnews}}

<div class="container">
  <div class="row">
    <div class="col-9">
        <img src={{this.img}} >
        <a href={{this.url}}>{{this.url}}</a>
        <h3>{{this.headline}}</h3>

        <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <input class="modal-input" type="text" placeholder="Name" name="name">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" aria-placeholder="add-comment">
        <textarea class="modal-input" name="note" id="comment-area" cols="30" rows="10"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-id="{{this._id}}">Save changes</button>
        <h6>{{this.comment}}</h6>
      </div>
    </div>
  </div>
</div>

        <button data-id="{{this._id}}" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add Note</button>
    </div>
  </div>
</div>

{{/each}}
</div>